package com.sunbeam;

import java.util.Scanner;

public class Date 
{
private int day;
private int month;
private int year;

void accept()
{
	Scanner sc = new Scanner(System.in);
	System.out.println("Enter day, month, year");	
	this.day = sc.nextInt();
	this.month = sc.nextInt();
	this.year = sc.nextInt();
}

void show()
{
	System.out.println("Date : "+this.day+"/"+this.month+"/"+this.year);
	
}
	
}
